<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="es.source.code.Fragment.BaseOrderFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:id="@+id/food_order_item"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_food_img"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name"
                style="@style/ItemTitle"/>

            <TextView
                android:id="@+id/tv_number"
                style="@style/ItemContent"/>

            <TextView
                android:id="@+id/tv_price"
                style="@style/ItemContent"/>

        </LinearLayout>

            <TextView
                android:id="@+id/tv_remark"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                style="@style/ItemContent" />
        <TextView
            android:id="@+id/btn_food_order"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:clickable="true"
            android:background="@drawable/btn_nor_down"/>

    </LinearLayout>
</LinearLayout>
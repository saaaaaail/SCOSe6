<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- 无标题栏 -->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>


    <!-- 通用输入框 -->
    <style name="ThemeEditText">
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:padding">14dp</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:drawablePadding">30dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@drawable/edit_text_selector</item>
        <item name="android:textSize">@dimen/text_large_16</item>
        <item name="android:singleLine">true</item>
    </style>

    <!-- 通用table按钮 -->
    <style name="TableButton">
        <item name="android:background">@drawable/btn_nor_down</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:clickable">true</item>
        <item name="android:textSize">20dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>


        <item name="android:gravity">center</item>
    </style>

    <!-- ListItem标题 -->
    <style name="ItemTitle">
        <item name="android:textColor">@color/gray1</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_large_16</item>
        <item name="android:padding">4dp</item>
    </style>

    <!-- ListItem内容 -->
    <style name="ItemContent">
        <item name="android:textColor">@color/theme_blue</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_middle_14</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="Gap">
        <item name="android:background">@color/default_gap</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
    </style>

    <!-- toolbar弹出菜单样式 -->
    <style name="ToolbarPopupTheme" parent="@style/ThemeOverlay.AppCompat">
        <item name="android:colorBackground">@color/theme_blue</item>
    </style>

    <style name="toolbar_white" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorControlNormal">@color/white</item>
        <!--<item name="android:actionBarSize">46dp</item>-->
    </style>
</resources>